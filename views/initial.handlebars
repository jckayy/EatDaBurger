<script type="text/javascript">

 $("#createburger").on("submit", function(event) {
    event.preventDefault();

    var newBurger = {
      burger: $("#createburger [name=burger]").val().trim()
    };
    console.log(newBurger);
    $.ajax("/burgers", {
      type: "POST",
      data: newBurger
    }).then(
      function() {
        console.log("created new burger");
        location.reload();
      });
  });



</script>
